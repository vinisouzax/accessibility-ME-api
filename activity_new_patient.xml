<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewPatientActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:padding="@dimen/activity_horizontal_margin"
		android:onClick="">

                <!--
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/lbl_newPatient"
            android:textColor="@android:color/white"
            android:textSize="20dp" />
        -->

                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|top"
                    android:layout_marginBottom="-15dp"
		    android:contentDescription="@null "
                    android:src="@drawable/ic_camera_account_white_48dp" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="48dp"
                    android:layout_height="48dp">

                    <EditText
                        android:id="@+id/field_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:hint="Nome:"
                        android:inputType="text"
                        android:nextFocusDown="@id/field_mail" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/field_mail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:hint="E-mail:"
                        android:inputType="textEmailAddress"
                        android:nextFocusDown="@id/field_mail_confirm" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/field_mail_confirm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:hint="Confirmar E-mail:"
                        android:inputType="textEmailAddress"
                        android:nextFocusDown="@id/field_fone" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/field_fone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:digits="0123456789+"
                        android:hint="Telefone (celular):"
                        android:inputType="phone"
                        android:lines="1"
                        android:maxLength="16"
                        android:nextFocusDown="@id/field_dtBirth" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/field_dtBirth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:digits="0123456789"
                        android:hint="Data de nascimento:"
                        android:inputType="date"
                        android:lines="1"
                        android:maxLength="10"
                        android:nextFocusDown="@id/field_gender_group" />
                </android.support.design.widget.TextInputLayout>

                <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/field_gender_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:nextFocusDown="@id/field_patient_characteristics"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/field_gender_m"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:onClick="onRadioButtonClickedGender"
                        android:text=" Masculino"
                        android:textSize="18dp" />

                    <RadioButton
                        android:id="@+id/field_gender_f"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="onRadioButtonClickedGender"
                        android:text=" Feminino"
                        android:textSize="18dp" />
                </RadioGroup>


                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/field_patient_characteristics"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Descrição:"
                        android:inputType="text"
                        android:nextFocusDown="@id/fab_submit_patient" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="invisible">

                    <EditText
                        android:id="@+id/field_accessCode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:hint="Código de acesso do paciente" />
                </android.support.design.widget.TextInputLayout>

                <!-- Login Button -->
                <Button
                    android:id="@+id/fab_submit_patient"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="10dp"
		    android:background="#03fc4e"
		    android:textColor="#3503fc"
                    android:text="Cadastrar" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
