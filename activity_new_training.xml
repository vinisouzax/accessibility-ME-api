<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewTrainingActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:padding="@dimen/activity_horizontal_margin">

                <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/field_training_type_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/field_training_type_not_articulatory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:onClick="onRadioButtonClickedTrainingType"
                        android:text=" Não articulatório"
                        android:textSize="18dp" />

                    <RadioButton
                        android:id="@+id/field_training_type_articulatory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="onRadioButtonClickedTrainingType"
                        android:text=" Articulatório"
                        android:textSize="18dp" />
                </RadioGroup>

                <RadioGroup
                    android:id="@+id/field_training_moviment_type_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="3dp"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/field_training_moviment_type_kiss"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:checked="true"
                        android:onClick="onRadioButtonClickedTrainingMovimentType"
                        android:text=" Beijo"
                        android:textSize="15dp" />

                    <RadioButton
                        android:id="@+id/field_training_moviment_type_pout_smile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:onClick="onRadioButtonClickedTrainingMovimentType"
                        android:text=" Bico-Sorriso"
                        android:textSize="15dp" />

                    <RadioButton
                        android:id="@+id/field_training_moviment_type_popping"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="175dp"
                        android:layout_marginTop="-65dp"
                        android:onClick="onRadioButtonClickedTrainingMovimentType"
                        android:text=" Estalo"
                        android:textSize="15dp" />

                    <RadioButton
                        android:id="@+id/field_training_moviment_type_blow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="175dp"
                        android:onClick="onRadioButtonClickedTrainingMovimentType"
                        android:text=" Sopro"
                        android:textSize="15dp" />

                </RadioGroup>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-28dp">

                    <EditText
                        android:id="@+id/field_training_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:hint="Nome do treino: "
                        android:inputType="text"
                        android:lines="1"
                        android:nextFocusDown="@id/field_training_number_session" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/field_training_number_session"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:digits="0123456789"
                        android:hint="Nº de repetições diárias:"
                        android:inputType="number"
                        android:lines="1"
                        android:maxLength="2"
                        android:nextFocusDown="@id/field_training_number_moviment" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/field_training_number_moviment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:digits="0123456789"
                        android:hint="Quantidade de movimentos:"
                        android:inputType="number"
                        android:nextFocusDown="@id/field_description" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textInputDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/field_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:inputType="text"
                        android:nextFocusDown="@id/field_training_day_group"
                        android:paddingBottom="8dp"
                        android:scrollHorizontally="false" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/field_training_date_start"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:digits="0123456789"
                        android:hint="Data de início:"
                        android:inputType="date"
                        android:lines="1"
                        android:maxLength="10"
                        android:nextFocusDown="@id/field_training_day_group" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/field_training_date_end"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:digits="0123456789"
                        android:hint="Data de Término:"
                        android:inputType="date"
                        android:lines="1"
                        android:maxLength="10"
                        android:nextFocusDown="@id/field_training_day_group" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/field_training_day_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal">

                </android.support.design.widget.TextInputLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <CheckBox
                    android:id="@+id/checkbox_day1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@null"
                    android:checked="true"
                    android:drawableBottom="?android:attr/listChoiceIndicatorMultiple"
                    android:onClick="onCheckboxClicked"
                    android:padding="5dp"
                    android:text="Seg" />

                <CheckBox
                    android:id="@+id/checkbox_day2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@null"
                    android:checked="true"
                    android:drawableBottom="?android:attr/listChoiceIndicatorMultiple"
                    android:onClick="onCheckboxClicked"
                    android:padding="5dp"
                    android:text="Ter" />

                <CheckBox
                    android:id="@+id/checkbox_day3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@null"
                    android:checked="true"
                    android:drawableBottom="?android:attr/listChoiceIndicatorMultiple"
                    android:onClick="onCheckboxClicked"
                    android:padding="5dp"
                    android:text="Qua" />

                <CheckBox
                    android:id="@+id/checkbox_day4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@null"
                    android:checked="true"
                    android:drawableBottom="?android:attr/listChoiceIndicatorMultiple"
                    android:onClick="onCheckboxClicked"
                    android:padding="5dp"
                    android:text="Qui" />

                <CheckBox
                    android:id="@+id/checkbox_day5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@null"
                    android:checked="true"
                    android:drawableBottom="?android:attr/listChoiceIndicatorMultiple"
                    android:onClick="onCheckboxClicked"
                    android:padding="5dp"
                    android:text="Sex" />

                <CheckBox
                    android:id="@+id/checkbox_day6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@null"
                    android:checked="true"
                    android:drawableBottom="?android:attr/listChoiceIndicatorMultiple"
                    android:onClick="onCheckboxClicked"
                    android:padding="5dp"
                    android:text="Sab" />

                <CheckBox
                    android:id="@+id/checkbox_day7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@null"
                    android:checked="true"
                    android:drawableBottom="?android:attr/listChoiceIndicatorMultiple"
                    android:onClick="onCheckboxClicked"
                    android:padding="5dp"
                    android:text="Dom" />

            </LinearLayout>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_submit_training"
                android:layout_width="476dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:layout_gravity="right"
                android:src="@drawable/ic_navigation_check_24"
                android:tint="#000"
                android:theme="@style/AppTheme2" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
