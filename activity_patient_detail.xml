<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:theme="@style/AppTheme2"
    tools:context="br.sofiafala.fonoaudiologo.PatientDetailActivity">

    <include
        android:id="@+id/patient_author_layout"
        layout="@layout/include_patient_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true" />

    <include
        android:id="@+id/patient_text_layout"
        layout="@layout/include_patient_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/patient_author_layout"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp" />

    <LinearLayout
        android:id="@+id/patient_comment_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_btns"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:weightSum="1.0">

        <EditText
            android:id="@+id/field_patient_comment_text"
            android:layout_width="231dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/patient_comment_form"
            android:layout_weight="0.8"
            android:hint="Escreva um comentÃ¡rio..."
            android:maxLines="1" />

        <Button
            android:id="@+id/button_patient_comment"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:text="Salvar" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_patient_comments"
        android:layout_width="wrap_content"
        android:layout_height="225dp"
        android:layout_below="@+id/patient_comment_form"
        android:layout_marginTop="23dp"
        tools:listitem="@layout/item_patient_comment">

    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/layout_btns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/patient_text_layout"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_remove_patient"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_delete_forever_grey600_18dp"
            android:tooltipText="@string/remove_user"></Button>

        <Button
            android:id="@+id/btn_reset_password_patient"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="70dp"
            android:background="@drawable/ic_profile_reset_pass"
            android:tooltipText="@string/btn_reset_password"></Button>

        <Button
            android:id="@+id/btn_save_patient"
            style="?android:textAppearanceSmall"
            android:layout_width="192dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Atualizar"
            android:textStyle="bold"
            android:tooltipText="@string/common_google_play_services_update_text" />

    </LinearLayout>

</RelativeLayout>
