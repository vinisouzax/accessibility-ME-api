<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <include
            android:id="@+id/patient_author_layout"
            layout="@layout/include_patient_author"
            android:layout_width="wrap_content"
            android:layout_height="58dp"
            android:layout_alignParentLeft="true" />


        <LinearLayout
            android:id="@+id/star_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/patient_author_layout"
            android:layout_alignBottom="@+id/patient_author_layout"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/editPatient"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="13dp"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/user_edit" />

            <ImageView
                android:id="@+id/comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="13dp"
                android:layout_marginRight="3dp"
                android:background="?attr/selectableItemBackground"
                android:onClick="showPopup"
                android:src="@drawable/ic_insert_chart_black_48dp" />

            <ImageView
                android:id="@+id/training"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="13dp"
                android:layout_marginRight="3dp"
                android:background="?attr/selectableItemBackground"
                android:src="@drawable/ic_image_edit"
                android:tint="#000" />

        </LinearLayout>

        <include layout="@layout/include_patient_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/patient_author_layout"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
